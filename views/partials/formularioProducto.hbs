<form action="/productos" method="post">

    <div class="form-group">
        <label for="title"><i><b>Nombre</b></i></label>
        <input id="title" class="form-control" type="text" name="title">
    </div>

    <div class="form-group">
        <label for="price"><i><b>Precio</b></i></label>
        <input id="price" class="form-control" type="number" step=any name="price">
    </div>

    <div class="form-group">
        <label for="thumbnail"><i><b>Foto URL</b></i></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail">
    </div>

    <button class="btn btn-success mt-3 mb-5">Enviar</button>
</form>